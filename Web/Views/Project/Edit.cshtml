@model Model.Entities.Project
@{
    ViewBag.BoxTitle = "Edit Project";
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_BoxInput.cshtml";
}
<form role="form" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientId" class="control-label"></label>
        <select asp-for="ClientId" class="form-control dropdown" asp-items="ViewBag.Clients">
            <option value=@null>None</option>
        </select>
    </div>
    <button type="submit" class="btn btn-default">Save changes</button>
    <a asp-action="Index" class="btn btn-default">Back</a>
</form>