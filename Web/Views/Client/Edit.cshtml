@model Model.Entities.Client
@{
    ViewBag.BoxTitle = "Edit Client";
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_BoxInput.cshtml";
}
<form role="form" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Save changes</button>
    <a asp-action="Index" class="btn btn-default">Back</a>
</form>